@using MyBigProject.Shared
@model List<Message>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" style="text-align:center">
    <h1 class="display-4">Welcome</h1>

    <p>Here is a list of messages I have:</p>

    <br />

    <ul style="list-style: none; text-align: left">
        @* Display Data *@
        @foreach (var message in Model)
        {
            @* I am fancy and give the messages a glowing border*@
            <li style="box-shadow: 0px 0px 20px rgba(0,255,0,.9); margin: 10px 10px 10px 10px">
                <b>@message.Author </b> said: @message.Content
            </li>
        }
    </ul>
</div>
